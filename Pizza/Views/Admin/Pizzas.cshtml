@model List<Pizza>

@{
    Layout = "_AdminLayout";
}
<a role="button" class="btn btn-secondary m-1" asp-action="CreatePizza">Create Pizza</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td><a asp-action="EditPizza" asp-controller="Admin" asp-route-id="@p.Id">Edit</a></td>
                <td><a asp-action="DeletePizza" asp-controller="Admin" asp-route-id="@p.Id">Delete</a></td>
            </tr>
        }

    </tbody>
</table>