@using Microsoft.AspNetCore.Identity
@model IdentityUser

<form asp-action="EditUser" method="post">
    <input asp-for="UserName" placeholder="Username" value="@Model.UserName"/>
    <input asp-for="Email" type="email" placeholder="Email" value="@Model.Email"/>
    <input asp-for="PhoneNumber" placeholder="Phone" value="@Model.PhoneNumber"/>
    <select name="role">
        <option value="User">User</option>
        <option value="Manager">Manager</option>
        <option value="Admin">Admin</option>
    </select>
    <button type="submit">Edit</button>
</form>