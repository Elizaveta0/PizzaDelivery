@model SignUpModel
@{
}
<style>
    .login-form {
        width: 340px;
        margin: 50px auto;
        font-size: 15px;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
</style>

<div class="login-form">
    <form asp-action="SignUp" asp-controller="Account" method="post">
        <h2 class="text-center">Sign Up</h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" asp-for="Username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" asp-for="Password">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Email" required="required" asp-for="Email">
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Phone" required="required" asp-for="Phone">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Sign up</button>
        </div>
    </form>
</div>